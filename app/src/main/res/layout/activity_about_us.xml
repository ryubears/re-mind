<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AboutUsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ImperialRed"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_imperialred"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/reMIND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reMIND"
        android:textSize="40sp"
        android:textColor="@color/ImperialRed"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toRightOf="@+id/appIcon"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/appIcon">
    </TextView>

    <TextView
        android:id="@+id/aboutUs"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:textSize="20sp"
        android:text="reMIND application is the Location-based reminders enables the users to set personal reminders at specific locations relevant to the reminder. Also, it allows multiple users to share reminders and collaboratively complete shared tasks. The app will also suggest possible reminders the user may want in accordance with reminders they have used in the past."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appIcon">

    </TextView>

    <TextView
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:textColor="#B5B5B5"
        android:textSize="20sp"
        android:text="Copyright 2019, University of Minnesota, CSCI 5115, Team 10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutUs">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>